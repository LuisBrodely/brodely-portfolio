---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Portafolio",
    path: "/",
  },
  {
    title: "Precios",
    path: "/pricing",
  },
  {
    title: "Sobre mi",
    path: "/about",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
  {
    title: "Mi blog",
    badge: true,
    path: "/blog",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5 bg-[#101010]">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-2xl"
          ><span class="font-bold text-white">Brodely</span><span
            class="text-[#3ECEAB]">.</span
          >
        </a>
        <div class="lg:hidden flex items-center">
          <MenuIcon class="w-6 h-6 text-gray-100" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-300 hover:text-gray-100">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-[#3ECEAB] rounded-full">
                          Nuevo
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" size="md" block style="muted">Curriculum</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="#" size="md" style="muted">Curriculum</Link>
      </div>
    </div>
  </header>
</Container>
